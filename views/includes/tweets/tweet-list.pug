.tweets-container.mt-3
    if tweets && tweets.length > 0
        each tweet in tweets
            .card.tweet-card.mb-3
                .card-body
                    .d-flex
                        img.rounded-circle.me-2(
                            src="https://via.placeholder.com/48"
                            alt="Photo de profil"
                        )
                        .tweet-content.w-100
                            .d-flex.justify-content-between
                                .tweet-header
                                    strong.me-2 Utilisateur
                                    span.text-muted · #{new Date(tweet.createdAt).toLocaleDateString()}
                                if isAuthenticated && tweet.author && user._id.toString() === tweet.author.toString()
                                    button.btn.btn-sm.text-danger.tweet-delete-btn(
                                        data-tweet-id=tweet._id
                                        title="Supprimer"
                                    )
                                        i.fa.fa-trash
                            p.card-text.mt-2= tweet.content
                            .tweet-actions.mt-2
                                button.btn.btn-sm.me-3(title="Répondre")
                                    i.far.fa-comment
                                button.btn.btn-sm.me-3(title="J'aime")
                                    i.far.fa-heart
    else
        .card
            .card-body.text-center
                p.mb-0 Aucun tweet à afficher