form.tweet-form(action="/tweet" method="POST")
    .card
        .card-body
            .d-flex.mb-3
                img.rounded-circle.me-2(src="https://via.placeholder.com/48" alt="Photo de profil")
                .flex-grow-1
                    textarea.form-control(
                        name="content"
                        placeholder="Quoi de neuf ?"
                        rows="3"
                        required
                    )
            .d-flex.justify-content-between.align-items-center
                .tweet-form-actions
                    button.btn.btn-link.text-primary.me-2(type="button")
                        i.far.fa-image
                    button.btn.btn-link.text-primary.me-2(type="button")
                        i.far.fa-smile
                .tweet-submit
                    button.btn.btn-primary(type="submit") Tweeter
