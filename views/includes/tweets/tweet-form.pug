form.tweet-form(action="/api/tweet/new" method="POST")
    .card.border-0.shadow-sm
        .card-body.p-3
            .d-flex.mb-3
                img.rounded-circle.me-3(
                    src="https://via.placeholder.com/48"
                    alt="Photo de profil"
                    width="48"
                    height="48"
                )
                .flex-grow-1
                    textarea.form-control.border-0.fs-5(
                        name="content"
                        placeholder="Quoi de neuf ?"
                        rows="3"
                        required
                        style="resize: none;"
                    )
            hr.my-3
            .d-flex.justify-content-between.align-items-center
                .tweet-form-actions
                    button.btn.btn-link.text-twitter.me-2.p-2.rounded-circle.hover-bg-light-blue(type="button")
                        i.far.fa-image.fa-lg
                    button.btn.btn-link.text-twitter.me-2.p-2.rounded-circle.hover-bg-light-blue(type="button")
                        i.far.fa-smile.fa-lg
                .tweet-submit
                    button.btn.btn-twitter.rounded-pill.px-4.fw-bold(type="submit") Envoyer
