extends ../layout.pug

block content
  .row.mt-4
    .col-md-6.mx-auto
      .card
        .card-header.bg-primary.text-white.text-center
          h3 Inscription
        .card-body
          form(action="/auth/signup" method="POST")
            .mb-3
              label.form-label(for="username") Nom d'utilisateur
              input.form-control#username(type="text" name="username" required)
            .mb-3
              label.form-label(for="email") Email
              input.form-control#email(type="email" name="email" required)
            .mb-3
              label.form-label(for="password") Mot de passe
              input.form-control#password(type="password" name="password" required minlength="6")
            .d-grid.gap-2
              button.btn.btn-primary(type="submit") S'inscrire
          hr
          .text-center
            p Déjà un compte ? 
              a(href="/auth/signin") Connectez-vous 